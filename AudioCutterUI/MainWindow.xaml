<Window x:Class="SoundCutterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundCutterUI"
        mc:Ignorable="d"
        Title="AudioCutter" SizeToContent="WidthAndHeight">
    <Border Margin="5">
        <Grid>
            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="Сначала выбери файл / файлы:"/>
            <Button Grid.Column="2"
                    Grid.Row="0"
                    Content="..." 
                    HorizontalAlignment="Stretch"                  
                    />
            <GridSplitter Grid.Column="0"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          ShowsPreview="True" 
                          Height="10"
                          Visibility="Hidden"/>
            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Text="Затем выстави порог аудио:"
                       VerticalAlignment="Center"/>
            <Grid Grid.Column="2"
                  Grid.Row="2"
                  Width="auto"
                  HorizontalAlignment="Stretch">
                <Slider x:Name="audioThreshold" 
                        Grid.Column="1" 
                        Grid.Row="0" 
                        Orientation="Horizontal" 
                        MinWidth="150"
                        Minimum="0" Maximum="10" 
                        HorizontalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        AutoToolTipPrecision="1" AutoToolTipPlacement="TopLeft"
                        TickPlacement="TopLeft"
                        Margin="5"/>
                <TextBlock Grid.Row="1" 
                           Text="Порог шума" 
                           TextAlignment="Center"
                           />

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
            </Grid>
            <GridSplitter Grid.Column="0"
              Grid.ColumnSpan="2"
              Grid.Row="3" 
              ShowsPreview="False" 
              Height="10"
              Visibility="Hidden"/>
            <TextBlock Grid.Column="0"
                     Grid.Row="4"
                     Text="Название выходного файла:"/>
            <GridSplitter Grid.Column="0"
              Grid.ColumnSpan="2"
              Grid.Row="5" 
              ShowsPreview="False" 
              Height="10"
              Visibility="Hidden"/>
            <TextBlock Grid.Column="0"
                       Grid.Row="6"
                       Text="В конце запусти обработку:"/>
            <Button Grid.Column="2"
                    Grid.Row="6"
                    Content="Старт" 
                    HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="1"
                          Grid.RowSpan="5"
                          ShowsPreview="False"
                          Width="10" 
                          Visibility="Hidden"/>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Border>
</Window>
